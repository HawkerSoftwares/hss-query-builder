  "scripts": {
    "start": "ng serve hss-query-builder",
    "build": "ng build hss-query-builder",
    "test": "ng test hss-query-builder-lib",
    "lib:build": "ng build hss-query-builder-lib",
    "lib:watch": "ng build hss-query-builder-lib --watch",
    "demo:start": "ng serve hss-query-builder",
    "build:prod": "ng build hss-query-builder-lib && ng build hss-query-builder --base-href /hss-query-builder/ --configuration production",
